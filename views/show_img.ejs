<style>
    .maincontainer{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: #b2bec3;
    }
    .root{
        width: 1000px;
        height: auto;
        background: #ecf0f1;
        padding: 10px;

    }
    .heading{
        color: #2d3436;
        font-size: 20px;
        font-weight: bold;
        font-family: Oxygen;
        display: flex;
        justify-content: center;
        padding: 5px;
    }
    .rowgap{
        margin-top: 40px;
    }
</style>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/javascripts/jeequery.js"></script>

<html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300&display=swap" rel="stylesheet">
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    </head>
    <title>Edit_Img</title>
    <body>
        <form action="/enquiry/edit_img" method="post" enctype="multipart/form-data">
            <div class="maincontainer">
            <div class="root">
                <div class="heading">
                <span><img src="/images/vistara-logo.png" width="200" align="left"></span><h3>Edit Company Logo</h3>
                </div>
                <hr>
                <div class="row">
                    <div class="col s12" style="display: flex;justify-content:center">
                        <input type="hidden" value="<%= flightid %>" name="flightid">
                        <input type="hidden" value="<%= boarding %>" name="oldlogo">
                        <h3><%= companyname %></h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12" style="display: flex;justify-content:center">
                    <img src="/images/<%= boarding %>" width="300">
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                            <span>File</span>
                            <input type="file" name="boarding" id="boarding" required>
                            </div>
                            <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">    
                    <div class="col s12" style="display:flex; justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>   
                </div>    
            </div>
            </div>
        </form>    
    </body>
</html>


<!-- JavaScript at end of body for optimized loading-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>